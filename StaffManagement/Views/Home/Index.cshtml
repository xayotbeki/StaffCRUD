@model HomeIndexViewModel

@{
    ViewBag.Title = "Staff List";
}


<div class="card-body">
    @foreach (var staff in Model.Staffs)
    {
        var photoFilePath = "~/images/" + (staff.PhotoFilePath ?? "user.png");

        <div class="card m-3" style="min-width:18rem; max-width:30.5%;">
            <div class="card-header">
                <h3>@staff.FirstName @staff.LastName</h3>
            </div>

            <img class="card-img-top" src="@photoFilePath" asp-append-version="true"/>

            <div class="card-footer text-center">
                <a asp-controller="home" asp-action="details" asp-route-Id="@staff.Id" class="btn btn-primary m-1">View</a>
                <a asp-controller="home" asp-action="edit" asp-route-Id="@staff.Id" class="btn btn-primary m-1">Edit</a>
                <form asp-controller="home" asp-action="delete" asp-route-Id="@staff.Id" method="post">
                    <button type="submit" class="btn btn-danger" onclick="return confirm('Are you sure you want to delete this record');">Delete</button>
                </form>
            </div>

        </div>
    }
</div>